<head>
    <link rel="stylesheet" href="/css/table.css">
</head>

<body>
    <%- include('./includes/nav.ejs') %>
  
    <main>
        <table>
        <% if (prod.length > 0) { %>
            
              
                <% for (let product of prod) { %>
                    
                    <tr>
                    
                        
                      <td>
                        <%= product.expenseamount %>
                    <%= product.description %>
                    <%= product.category %>
                    </td>
                    <td>
                    <form action="/delete/<%= product.id %>">
                        <button  type="submit">DELETE</button>
                    </form>
                </td>
                <td>
                    <form action="/update/<%= product.id %>">
                        <button  type="submit">EDIT</button>
                    </form>          
                               
                </td>
            
        </tr>
    
                       
                <% } %>
          
            
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </table>
    </main>

